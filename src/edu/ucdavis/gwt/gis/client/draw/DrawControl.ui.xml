<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.collection {
			font-size: 14px;
			color: #444444;
			text-align: center;
			background-color: white;
			padding: 5px;
			opacity: .9;
			margin: 3px;
			
			box-shadow: 0 0 3px #aaaaaa;
			-moz-box-shadow: 0 0 3px #aaaaaa;
			-webkit-box-shadow: 0 0 3px #aaaaaa;
			
			border-radius: 6px;
			-moz-border-radius: 6px;
			-webkit-border-radius: 6px;
		}
		.collection:hover {
			opacity: 1;		
		}
		
		.drawControlsAnchor {
			position : absolute;
			top      : 0px;
			left     : 55px;
			border   : 1px solid #999;
			
			box-shadow : 0 0 5px rgba(0,0,0,.3);
			-moz-box-shadow : 0 0 5px rgba(0,0,0,.3);
			-webkit-box-shadow : 0 0 5px rgba(0,0,0,.3);
			
			border-radius : 4px;
			-moz-border-radius : 4px;
			-webkit-border-radius : 4px;
		}
		
		.actionsAnchor {
			position : absolute;
			top      : 45px;
			left     : 55px;
			border   : 1px solid #999;
			
			box-shadow : 0 0 5px rgba(0,0,0,.3);
			-moz-box-shadow : 0 0 5px rgba(0,0,0,.3);
			-webkit-box-shadow : 0 0 5px rgba(0,0,0,.3);
			
			border-radius : 4px;
			-moz-border-radius : 4px;
			-webkit-border-radius : 4px;
		}
		
		.done {
			position : absolute;
			top      : 0px;
			left     : 225px;
			border   : 1px solid #999;
			
			box-shadow : 0 0 5px rgba(0,0,0,.3);
			-moz-box-shadow : 0 0 5px rgba(0,0,0,.3);
			-webkit-box-shadow : 0 0 5px rgba(0,0,0,.3);
			
			border-radius : 4px;
			-moz-border-radius : 4px;
			-webkit-border-radius : 4px;
		}
		
		.root {
			position : relative;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.root}" >
	
		<g:SimplePanel ui:field="drawControlsAnchor" styleName="{style.drawControlsAnchor}"></g:SimplePanel>
		<g:SimplePanel ui:field="doneAnchor" styleName="{style.done}"></g:SimplePanel>
		<g:SimplePanel ui:field="actionsAnchor"  styleName="{style.actionsAnchor}" ></g:SimplePanel>
		
		
	</g:HTMLPanel>
</ui:UiBinder> 