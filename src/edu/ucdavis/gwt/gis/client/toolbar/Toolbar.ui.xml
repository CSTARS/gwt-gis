<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gis="urn:import:edu.ucdavis.gwt.gis.client.extras">
	<ui:style>
		.toolbar {
	      height: 36px;
	      font-size : 10px;
	      text-shadow : 1px 1px white;
	      padding     : 6px 5px 0 5px;
		}
		.title {
			text-align: center;
			color: #666;
			text-shadow: 1px 1px rgba(172, 172, 172, 0.6);
			font-size: 20px;
			padding-top: 5px;
		}
		.toolbar a {
			margin : 0 3px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="root" >
		<g:FlowPanel styleName="{style.toolbar}" >

				<g:FlowPanel ui:field="menuPanel"  styleName="pull-left" />

				<g:FlowPanel ui:field="statusPanel"  styleName="pull-left" />
				<g:SimplePanel ui:field="messagePanel" styleName="pull-left" />

				<g:Anchor ui:field="navExpandBtn" addStyleNames="nav-expand-btn pull-right btn" ></g:Anchor>
				<g:SimplePanel ui:field="searchPanel" styleName="pull-right" />

				<g:HTML ui:field="title" addStyleNames="{style.title} hidden-phone"></g:HTML>
						
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 